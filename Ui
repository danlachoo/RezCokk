-- UIHelper.lua
local UIHelper = {}

-- Функция для создания окна
function UIHelper.createWindow(name)
    local windowFrame = Instance.new("Frame")
    windowFrame.Name = name .. "Window"
    windowFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    windowFrame.Position = UDim2.new(0.262, 0, 0.213, 0)
    windowFrame.Size = UDim2.new(0, 645, 0, 356)
    windowFrame.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "TitleLabel"
    titleLabel.Parent = windowFrame
    titleLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    titleLabel.Size = UDim2.new(0, 200, 0, 50)
    titleLabel.Position = UDim2.new(0.057, 0, 0, 0)
    titleLabel.Font = Enum.Font.SourceSansBold
    titleLabel.Text = name
    titleLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
    titleLabel.TextScaled = true

    local icon = Instance.new("ImageLabel")
    icon.Name = "Icon"
    icon.Parent = windowFrame
    icon.Size = UDim2.new(0, 52, 0, 52)
    icon.Position = UDim2.new(0, 0, 0, 0)
    icon.Image = "rbxassetid://18663149111"

    return windowFrame
end

-- Функция для создания кнопки
function UIHelper.createButton(name, parent, onClick)
    local button = Instance.new("TextButton")
    button.Name = name .. "Button"
    button.Parent = parent
    button.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    button.Size = UDim2.new(0.3, 0, 0.1, 0)
    button.Position = UDim2.new(0.35, 0, 0.6, 0)
    button.Font = Enum.Font.SourceSans
    button.Text = name
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextScaled = true

    if onClick then
        button.MouseButton1Click:Connect(onClick)
    end

    return button
end

return UIHelper
